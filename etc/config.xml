<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <translation_center>
            <general>
                <interceptor_active>0</interceptor_active>
                <locales>en_US</locales>
                <storage_type>Creativestyle\TranslationCenter\Service\Translation\Storage\Csv</storage_type>
                <store_metadata>0</store_metadata>
                <cache_active>0</cache_active>
                <cache_storage_type>Creativestyle\TranslationCenter\Service\Translation\Storage\MagentoCache</cache_storage_type>
                <language_package_vendor>creativestyle</language_package_vendor>
                <language_package_parent_vendor>magento</language_package_parent_vendor>
            </general>
        </translation_center>
    </default>
</config>
