<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::system">
                    <resource id="Creativestyle_TranslationCenter::translations" title="Translation Center" sortOrder="70">
                        <resource id="Creativestyle_TranslationCenter::translations_import" title="Import" sortOrder="10"/>
                        <resource id="Creativestyle_TranslationCenter::translations_settings" title="Settings" sortOrder="900"/>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
